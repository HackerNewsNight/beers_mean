doctype 5
html(ng-app="beerApp")
  head
    meta(charset='utf8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    base(href='/')
    title= title

    link(rel='stylesheet', href='static/lib/bootstrap/css/bootstrap.min.css')

    link(rel='stylesheet', href='static/stylesheets/style.css')
  body
    div(class='navbar')
      a(class='navbar-brand', href='#') Beer App
      ul(class='nav navbar-nav')
        li(class='active')
          a(href='#').
            My Beers
        li
          a(href='#').
            Add New
        li
          a(href='#').
            Stats
      button(type='button', class='btn btn-default navbar-btn pull-right') Sign In

    block body
    block scripts
